{
  "name": "my-itcss",
  "version": "1.4.0",
  "description": "Biblioteca baseada no ItCss para ajudar a escrever CSS",
  "scripts": {
    "build": "node-sass sass/main.scss public/main.css && npm run minify",
    "minify": "csso public/main.css --output public/main.min.css",
    "pre-deploy": "npm run build && npm run minify",
    "watch-sass": "node-sass --watch sass -o ./public"
  },
  "type": "module",
  "dependencies": {
    "node-sass": "^7.0.3",
    "sass-mq": "^5.0.1"
  },
  "devDependencies": {
    "csso-cli": "^3.0.0"
  },
  "main": "public/main.min.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ToMattBan/MyItCss.git"
  },
  "files": [
    "public/main.min.css"
  ],
  "keywords": [
    "css",
    "it",
    "myit",
    "sass"
  ],
  "author": "ToMatt <souaquelecleyton@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ToMattBan/MyItCss/issues"
  },
  "homepage": "https://github.com/ToMattBan/MyItCss#readme"
}
